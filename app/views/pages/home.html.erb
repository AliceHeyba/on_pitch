<div class= "container mt-2 bg-white pt-2">
  <div class = "title pb-4">
    <h1>Less work, more play. </h1>
    <p>Discover and book your favourite pitch!</p>
  </div>
  <div class="top-banner">
    <div class="top-picture">
    <img src="https://cdn2.wanderlust.co.uk/media/1063/img_141216_15030409_w19cs.jpg?anchor=center&mode=crop&width=1200&height=0&rnd=132049994090000000" alt="pitch 1" class = "pitch-1">
    </div>

    <div class = "d-flex justify-content-around multi-search pt-2 ">
    <form action="/pitches" class="home_search_bar_form">
        <div class="sport-search d-flex flex-column">
          <label for="sport" class="search-label">Sport</label>
          <select id="sport-label" name="sport" placeholder="Enter sport">
            <option value="Basketball">Basketball</option>
            <option value="Tennis">Tennis</option>
            <option value="Football">Football</option>
            <option value="Badminton">Badminton</option>
            <option value="Cricket">Cricket</option>
            <option value="Padel">Padel</option>
            <option value="Pickleball">Pickleball</option>
            <option value="Golf">Golf</option>
            <option value="Table Tennis">Table Tennis</option>
            <option value="Volleyball">Volleyball</option>
          </select>
        </div>
        <div class="location-search d-flex flex-column">
          <label for="location" class="search-label">Location</label>
          <input class= "location" type="location" placeholder="Enter location">
        </div>
        <button class="btn btn-outline-success search" type="submit">
          <i class="fa-solid fa-magnifying-glass small-btn"></i>
        </button>
        <div class="date-search d-flex flex-column">
          <label for="start" class="search-label">Date</label>
          <input class = "date-label" type="date" id="start" name="trip-start"
            value="2018-07-22"
            min="today" max="2023-12-31">
        </div>
      </form>
    </div>
  </div>

  <div class="sports_filter">
  <%= link_to pitches_path(sport: "Basketball") do  %>
    <button class="btn" onclick="filterSelection('basketball')"><i class="fa-solid fa-basketball fa-3x"></i> <br> Basketball</button>
  <% end %>

  <%= link_to pitches_path(sport: "Tennis") do  %>
      <button class="btn"><i class="fa-regular fa-circle fa-3x"></i> <br> Tennis</button>
  <% end %>

  <%= link_to pitches_path(sport: "Football") do  %>
    <button class="btn"><i class="fa-solid fa-futbol fa-3x"></i> <br> Football</button>
  <% end %>

  <%= link_to pitches_path(sport: "Badminton") do  %>
    <button class="btn"><i class="fa-solid fa-feather fa-3x"></i> <br> Badminton</button>
  <% end %>

  <%= link_to pitches_path(sport: "Cricket") do  %>
    <button class="btn"><i class="fa-solid fa-baseball-bat-ball fa-3x"></i> <br> Cricket</button>
  <% end %>

  <%= link_to pitches_path(sport: "Padel") do  %>
    <button class="btn"><i class="fa-regular fa-circle fa-3x"></i> <br> Padel</button>
  <% end %>

  <%= link_to pitches_path(sport: "Pickleball") do  %>
    <button class="btn"><i class="fa-solid fa-wine-bottle fa-3x"></i> <br> Pickleball</button>
  <% end %>

  <%= link_to pitches_path(sport: "Golf") do  %>
    <button class="btn"><i class="fa-solid fa-golf-ball-tee fa-3x"></i> <br> Golf</button>
  <% end %>

  <%= link_to pitches_path(sport: "Tabletennis") do  %>
    <button class="btn"><i class="fa-solid fa-table-tennis-paddle-ball fa-3x"></i> <br> Tabletennis</button>
  <% end %>

  <%= link_to pitches_path(sport: "Volleyball") do  %>
    <button class="btn"><i class="fa-solid fa-volleyball fa-3x"></i> <br> Volleyball</button>
  <% end %>
  </div>

  <div class="d-flex justify-content-between mt-2 mb-5 middle-banner" class="middle-banner-container">
    <div class="middle-banner-left">
      <img src="https://miro.medium.com/max/1400/0*0yRYoE7pSAeL0hUs.jpg" alt="pitch 2">
        <div class="d-flex justify-content-around middle-banner-content-left">
          <div class="middle-banner-text">
          <p>OUTDOOR PITCHES</p>
          <h6>Get some fresh air and exercise this autumn.</h6>
          </div>
          <button type="button" class="btn book-now">Book now
          </button>
        </div>
    </div>
    <div class="middle-banner-right">
      <img src="https://hashtaglegend.com/storage/app/media/Article%20Images/pigalle-paris-basketball-court-02.jpg" alt="pitch 3">
        <div class="d-flex justify-content-around middle-banner-content-right">
          <div class="middle-banner-text">
          <p>PLAY BALL THIS WEEK END</p>
          <h6>Find your pitch, roll up in your van or find a nearby stay.</h6>
          </div>
          <button type="button" class="btn book-now2">Book now
          </button>
      </div>
    </div>
  </div>

  <div class= "third-banner">
    <div class ="bottom-picture">
      <img src="https://padelcreations.b-cdn.net/wp-content/uploads/2021/11/padel-court-panoramic-outdoor-padelcreations.-PANORAMIC-OUTDOOR-by-Padelcreations-2.jpg" alt="pitch 4" style="height: 600px;">
    </div>
    <div class="earn-money">
      <h4>Own a sports pitch?</h4>
      <h4>Earn money with OnPitch!</h4>
      <p> Open your pitch up to bookings from our community of sports lovers from all around the UK!</p>
      <button type="button" class="btn learn-more">Learn more
      </button>
    </div>
  </div>
</div>
