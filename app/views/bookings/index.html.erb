<div class="container my_bookings">
<h2>My Bookings</h2>
<br>
<div class="container">
    <div class="row">
      <div class="col-5 bookings_card">
          <h3>Upcoming Bookings</h3>
            <% @future_bookings.each do |booking| %>

              <p> <strong> <%= "Venue: #{booking.pitch.name}" %> </strong> <% if booking.pitch.sport == "Tennis" %>
              <i class="fa-regular fa-circle"></i>
                <% elsif booking.pitch.sport == "Basketball" %>
                <i class="fa-solid fa-basketball"></i>
                <% elsif booking.pitch.sport == "Football" %>
                <i class="fa-solid fa-futbol"></i>
                <% elsif booking.pitch.sport == "Badminton" %>
                <i class="fa-solid fa-feather"></i>
                <% elsif booking.pitch.sport == "Cricket" %>
                <i class="fa-solid fa-baseball-bat-ball"></i>
                <% elsif booking.pitch.sport == "Padel" %>
                <i class="fa-regular fa-circle"></i>
                <% elsif booking.pitch.sport == "Pickleball" %>
                <i class="fa-solid fa-wine-bottle"></i>
                <% elsif booking.pitch.sport == "Golf" %>
                <i class="fa-solid fa-golf-ball-tee"></i>
                <% elsif booking.pitch.sport == "Tabletennis" %>
                <i class="fa-solid fa-table-tennis-paddle-ball"></i>
                <% elsif booking.pitch.sport == "Volleyball" %>
                <i class="fa-solid fa-volleyball"></i>
              <% end%></p>
              <li><%= "Booking Start: #{booking.start_date}"%></li>
              <li><%= "Booking End: #{booking.end_date}" %></li>
            <% end %>
        </div>

        <div class="col-2"> </div>

        <div class="col-5 bookings_card">
          <h3 >Past Bookings</h3>
            <% @past_bookings.each do |booking|%>

              <p> <strong> <%= "Venue: #{booking.pitch.name}" %> </strong> <% if booking.pitch.sport == "Tennis" %>
              <i class="fa-regular fa-circle"></i>
                <% elsif booking.pitch.sport == "Basketball" %>
                <i class="fa-solid fa-basketball"></i>
                <% elsif booking.pitch.sport == "Football" %>
                <i class="fa-solid fa-futbol"></i>
                <% elsif booking.pitch.sport == "Badminton" %>
                <i class="fa-solid fa-feather"></i>
                <% elsif booking.pitch.sport == "Cricket" %>
                <i class="fa-solid fa-baseball-bat-ball"></i>
                <% elsif booking.pitch.sport == "Padel" %>
                <i class="fa-regular fa-circle"></i>
                <% elsif booking.pitch.sport == "Pickleball" %>
                <i class="fa-solid fa-wine-bottle"></i>
                <% elsif booking.pitch.sport == "Golf" %>
                <i class="fa-solid fa-golf-ball-tee"></i>
                <% elsif booking.pitch.sport == "Tabletennis" %>
                <i class="fa-solid fa-table-tennis-paddle-ball"></i>
                <% elsif booking.pitch.sport == "Volleyball" %>
                <i class="fa-solid fa-volleyball"></i>
              <% end%></p>
              <li><%= "Booking Start: #{booking.start_date}"%></li>
              <li><%= "Booking End: #{booking.end_date}" %></li>
            <% end %>
        </div>
    </div>
</div>
</div>
